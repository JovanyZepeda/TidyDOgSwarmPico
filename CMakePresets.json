{
    "version": 4,
    "configurePresets": [
        {
            "name": "pico-app-default",
            "displayName": "Pico CMake Build Application Preset",
            "description": "Build for Raspberry Pico - Application",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/",
                "TARGET_GROUP": "production",
                "BUILD_FOR_PICO": "ON"
            },
            "environment": {
                "PICO_SDK_PATH": "/usr/share/pico_sdk"
            }
        },
        {
            "name": "host-linux-tests-default",
            "displayName": "Host PC Build Preset",
            "description": "Build for development machine - Tests of the Pico App",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/test/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/",
                "TARGET_GROUP": "test",
                "BUILD_FOR_PICO": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Raspberry-Pico-App-Build-Preset",
            "displayName": "Target Hardware Build Preset -> Raspberry Pico",
            "cleanFirst": true,
            "verbose": false,
            "configurePreset": "pico-app-default"
        },
        {
            "name": "development-pc-build-preset",
            "displayName": "Development Hardware PC Build -> Linux PC",
            "cleanFirst": true,
            "verbose": false,
            "configurePreset": "host-linux-tests-default"
        }
    ]
}