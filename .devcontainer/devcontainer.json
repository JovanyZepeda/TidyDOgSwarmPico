{
  "name": "Raspberry Pico Development",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": {
    }
  },
  "containerEnv": {
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		// "--device=/dev/bus/usb",
    "--privileged"
  ],
  "mounts": [
    "type=bind,source=/dev/bus/usb,target=/dev/bus/usb"
  ],
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-vscode.cpptools",
        "marus25.cortex-debug",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "eamodio.gitlens",
        "xaver.clang-format",
        "chris-hock.pioasm",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  }
  // "remoteUser": "vscode"
}
